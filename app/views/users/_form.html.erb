<div class="row justify-content-center mt-8">
   <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, local: true, data: { turbo: false }) do |f| %>
         <br>
         <div class="form-group row">
            <%= f.label :name, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter your name"%>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.email_field :email,class: "form-control shadow rounded", placeholder: "Enter email" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :phonenumber, "Phone Number", class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.number_field :phonenumber,class: "form-control shadow rounded", placeholder: "Enter phone number" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.password_field :password,class: "form-control shadow rounded", placeholder: "Enter password" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :confirmpassword, "Confirm password", class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.password_field :confirmpassword,class: "form-control shadow rounded", placeholder: "Confirm password" %>
            </div>
         </div>
         <div class="form-group row justify-content-center">
            <%= f.submit "Signup", class: "btn btn-outline-dark btn-lg col-2" %>
         </div>
      <% end %>
   </div>
</div>