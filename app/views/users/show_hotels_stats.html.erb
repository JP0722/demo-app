

<div class="row">
	<div class="mt-2 col-6">
		<h4 class="text-center"> Bookings for each hotel:- </h4>
		<%= pie_chart Hotel.joins(:bookings).where(user_id: current_user.id).group(:name).count %>
	</div>
	<div class="mt-2 col-6">
		<h4 class="text-center"> Total revenue for each hotel:- </h4>
	 	<%= bar_chart Hotel.joins(:bookings).where(user_id: current_user).group(:name).sum(:total_cost) %>
	 </div>
</div>
<hr>

<div class="row justify-content-center" style="margin-top: 1.5rem; margin-bottom: 10px;">
	<div class="col-6">
		<h4 class="mt-2 text-center"> Bookings chart based on dates </h4>
		<div class="p-4">
			<%= line_chart Hotel.joins(:bookings).where(user_id: current_user.id).group_by_day(:created_at).count, width:"100%", height: "200px" %>
		</div>
	</div>

	<div class="col-6">
		<h4 class="mt-2 text-center"> Booking chart based on week days </h4>
		<div class="p-4">
			<%= column_chart Hotel.joins(:bookings).where(user_id: current_user.id).group_by_day_of_week(:created_at, format: "%a").count, width:"100%", height: "200px" %>
		</div>
	</div>
 </div>
</div>