<div class="row justify-content-center mt-8">
   <div class="col-10">
      <%= render 'shared/errors', obj: @hotel %>
      <%= form_with(model: @hotel, local: true, data: { turbo: false }) do |f| %>
         <br>
         <div class="form-group row">
            <%= f.label :name, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter your hotel name"%>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.text_field :description,class: "form-control shadow rounded", placeholder: "Enter hotel description" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :address, "address", class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.text_field :address,class: "form-control shadow rounded", placeholder: "Enter hotel address" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :price_per_room, "Price Per Room", class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
               <%= f.number_field :price_per_room,class: "form-control shadow rounded", placeholder: "Enter price for each room" %>
            </div>
         </div>

         <div class="form-group row justify-content-center">
            <%= f.label :ac, "AC", class: "col-form-label text-dark" %>
            <div class="col-1">
               <%= f.check_box :ac,class: "form-control shadow rounded" %>
            </div>
            <%= f.label :wifi, "Wifi", class: "col-form-label text-dark" %>
            <div class="col-1">
               <%= f.check_box :wifi,class: "form-control shadow rounded"%>
            </div>
            <%= f.label :parking, "Parking", class: "col-form-label text-dark" %>
            <div class="col-1">
               <%= f.check_box :parking,class: "form-control shadow rounded"%>
            </div>
         </div>

         <div class="form-group justify-content-center">
            <%= f.label :available_from_date, "Availble from: ", class: "col-form-label text-dark" %>
            <%= f.text_field :available_from_date, 
               data: {
                 controller: "flatpickr",
                 flatpickr_min_date: Time.zone.now,
                 flatpickr_max_date: Time.zone.now + 60.days
               } %>
            <%= f.label :available_to_date, "to: ", class: "col-form-label text-dark" %>
           <%= f.text_field :available_to_date,
               data: {
                 controller: "flatpickr",
                 flatpickr_min_date: Time.zone.now,
                 flatpickr_max_date: Time.zone.now + 60.days
               } %>
         </div>

         <div class="form-group row">
            <%= f.label :image, "Add Image", class: "col-2 col-form-label text-dark"  %>
            <div class="col-4">
               <%= f.file_field :image %>
            </div>
         </div>
         <div class="form-group row justify-content-center">
            <%= f.submit "Submit hotel info", class: "btn btn-outline-dark btn-lg col-3" %>
         </div>
      <% end %>
   </div>
</div>